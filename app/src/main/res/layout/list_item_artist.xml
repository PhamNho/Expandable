<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgNVL"
        android:layout_width="@dimen/d_45"
        android:layout_height="@dimen/d_45"
        android:layout_marginVertical="@dimen/d_15"
        android:layout_marginStart="@dimen/d_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNameNVL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/d_10"
        android:maxLines="1"
        android:textFontWeight="600"
        android:textSize="@dimen/font_size_17"
        app:layout_constraintEnd_toStartOf="@id/cbPrices"
        app:layout_constraintStart_toEndOf="@id/imgNVL"
        app:layout_constraintTop_toTopOf="@id/imgNVL" />

    <TextView
        android:id="@+id/tvCodeNVL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/d_10"
        android:maxLines="1"
        android:textAllCaps="true"
        android:textSize="@dimen/font_size_17"
        app:layout_constraintEnd_toStartOf="@id/cbPrices"
        app:layout_constraintStart_toEndOf="@id/imgNVL"
        app:layout_constraintTop_toBottomOf="@id/tvNameNVL" />

    <CheckBox
        android:id="@+id/cbPrices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/d_10"
        android:minWidth="@dimen/d_0"
        app:layout_constraintBottom_toBottomOf="@id/imgNVL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imgNVL" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_0_5"
        android:layout_marginTop="@dimen/d_15"
        app:layout_constraintTop_toBottomOf="@id/imgNVL" />
</androidx.constraintlayout.widget.ConstraintLayout>